{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "lib",
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "allowJs": true,
    "types": ["node", "jest"],
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "exclude": ["lib"]
}
